      </td>
      <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td>
        <%= link_to image_tag('back.png', :border => 0, :alt => '', :title => 'Cancelar', :width => 40, :height => 40),
                    customers_path
        %>
      </td>
    </tr>
  </table>
<% end %>
