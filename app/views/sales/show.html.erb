<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:rioexport_contract) %>:</strong></dt>
  <dd><%= @sale.rioexport_contract %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suplier_contract) %>:</strong></dt>
  <dd><%= @sale.suplier_contract %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_contract) %>:</strong></dt>
  <dd><%= @sale.customer_contract %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping_co_id) %>:</strong></dt>
  <dd><%= @sale.shipping_co_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bags_qty) %>:</strong></dt>
  <dd><%= @sale.bags_qty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping_date) %>:</strong></dt>
  <dd><%= @sale.shipping_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @sale.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_type) %>:</strong></dt>
  <dd><%= @sale.product_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_commission) %>:</strong></dt>
  <dd><%= @sale.customer_commission %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suplier_name) %>:</strong></dt>
  <dd><%= @sale.suplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @sale.customer.name %></dd>
</dl>

